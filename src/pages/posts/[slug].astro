---
import Layout from '../../layouts/Layout.astro'
import { getAllPosts, getPostBySlug, getAllBlocksByBlockId } from '../../lib/notion/client.ts'
import NotionBlocks from '../../components/NotionBlocks.astro'
import styles from '../../styles/blog.module.css'

export async function getStaticPaths() {
  const posts = await getAllPosts()
  return posts.map((post) => ({ params: { slug: post.Slug } }))
}

const { slug } = Astro.params
const post = await getPostBySlug(slug)
if (!post) throw new Error(`Post not found: ${slug}`)

const blocks = await getAllBlocksByBlockId(post.PageId)

const allPosts = await getAllPosts()
const postIndex = allPosts.findIndex((p) => p.Slug === slug)
const prevPost = allPosts[postIndex + 1]
const nextPost = allPosts[postIndex - 1]
---

<Layout title={post.Title} description={post.Excerpt} path={post.Slug}>
  <div slot="main" class="viewport-protector">
    <div class="library-shell">
      
      <main class="core-content">
        
        <header class="title-section">
          <h1 class="post-title">{post.Title}</h1>
        </header>

        <div class="layout-switcher">
          <button id="set-horizontal" class="switch-btn">Standard (横書き)</button>
          <button id="set-vertical" class="switch-btn">Novel (縦書き※test)</button>
        </div>

        <div id="writing-wrapper" class="blog-mode content-body">
          <section class="post-body">
            {blocks.map((block) => (
              <NotionBlocks block={block} />
            ))}
          </section>
        </div>

        <div class="interaction-container">
          <div class="stamp-selection">
            <p class="section-label">Read & Stamped</p>
            <div class="stamp-buttons">
              <button class="stamp-trigger" data-stamp="1">
                <img src="/stamps/stamp1_static.png" alt="Stamp 1" />
                <span class="count" id="count-1">0</span>
              </button>
              <button class="stamp-trigger" data-stamp="2">
                <img src="/stamps/stamp2_static.png" alt="Stamp 2" />
                <span class="count" id="count-2">0</span>
              </button>
              <button class="stamp-trigger" data-stamp="3">
                <img src="/stamps/stamp3_static.png" alt="Stamp 3" />
                <span class="count" id="count-3">0</span>
              </button>
            </div>
          </div>

          <hr class="divider" />

          <div class="comment-section">
            <h3 class="section-title">Leave a Comment</h3>
            <div id="comment-list" class="comment-list"></div>
            <form id="comment-form" class="comment-form">
              <input type="text" id="comment-name" placeholder="@Your name..." class="input-name" />
              <textarea id="comment-content" placeholder="感想をしたためる..." class="input-text" required></textarea>
              <button type="submit" class="submit-btn" id="submit-button">寄稿する</button>
            </form>
          </div>
        </div>

        <nav class="post-navigation">
          {prevPost && (
            <a href={`/posts/${prevPost.Slug}`} class="nav-prev">
              <span class="nav-label">Previous Entry</span>
              <span class="nav-title">{prevPost.Title}</span>
            </a>
          )}
          {nextPost && (
            <a href={`/posts/${nextPost.Slug}`} class="nav-next">
              <span class="nav-label">Next Entry</span>
              <span class="nav-title">{nextPost.Title}</span>
            </a>
          )}
        </nav>

        <footer class="post-footer">
          <a href="/" class="back-link">← Library Top</a>
        </footer>

      </main> </div>
  </div>
</Layout>

<script>
  import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm'

  const supabaseUrl = 'https://diyaziidypdcstzspkek.supabase.co'
  const supabaseKey = 'sb_publishable_TF8XJr4wKI2W2aXC2EVGdA_eGJq1uCs' 
  const supabase = createClient(supabaseUrl, supabaseKey)
  const slug = window.location.pathname;

  // --- 【1】スタンプ読み込み ---
  async function loadCounts() {
    const { data } = await supabase.from('reactions').select('stamp_id, count').eq('slug', slug);
    if (data) {
      data.forEach(item => {
        const countEl = document.getElementById(`count-${item.stamp_id}`);
        if (countEl) countEl.textContent = String(item.count);
      });
    }
  }

  // --- 【2】コメント読み込み（開閉機能削除版） ---
  async function loadComments() {
    const commentList = document.getElementById('comment-list');
    if (!commentList) return;

    const { data, error } = await supabase
      .from('comments')
      .select('*')
      .eq('slug', slug)
      .order('created_at', { ascending: true });

    if (error || !data) return;

    if (data.length > 0) {
      const parents = data.filter(c => !c.parent_id);
      const children = data.filter(c => c.parent_id);

      commentList.innerHTML = parents.map((p, index) => {
        const pDate = new Date(p.created_at).toLocaleString('ja-JP', { 
          year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' 
        });

        const threadChildren = children.filter(c => c.parent_id === p.id);
        
        // 返信の生成
        const childHtml = threadChildren.map(c => `
          <div class="comment-item nested">
            <div class="comment-header">
              <span class="comment-author">@${c.name}</span>
              <span class="comment-date">${new Date(c.created_at).toLocaleString('ja-JP', { month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' })}</span>
            </div>
            <div class="comment-body">${c.content}</div>
          </div>
        `).join('');

        const rowClass = index % 2 === 0 ? 'row-even' : 'row-odd';

        return `
          <div class="comment-group ${rowClass}">
            <div class="comment-item">
              <div class="comment-header">
                <span class="comment-author">@${p.name}</span>
                <span class="comment-date">${pDate}</span>
              </div>
              <div class="comment-body">${p.content}</div>
              <div class="comment-actions">
                <button class="reply-btn" data-id="${p.id}" data-user="${p.name}">Reply</button>
              </div>
            </div>
            <div class="reply-list" id="thread-${p.id}">
              ${childHtml}
            </div>
          </div>
        `;
      }).join('');

      // Replyボタンのイベントリスナー
      document.querySelectorAll('.reply-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const pId = btn.getAttribute('data-id');
          const user = btn.getAttribute('data-user');
          const form = document.getElementById('comment-form');
          const input = document.getElementById('comment-content') as HTMLTextAreaElement;
          form?.setAttribute('data-reply-to', pId || '');
          input.value = `@${user} `;
          input.focus();
        });
      });
    } else {
      commentList.innerHTML = '<p class="no-comment">まだ感想はありません。</p>';
    }
  }

  // --- 【3】スタンプ送信（アニメーション機能維持） ---
  const stampBtns = document.querySelectorAll('.stamp-trigger');
  stampBtns.forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const stampId = btn.getAttribute('data-stamp');
      const gif = document.createElement('img');
      gif.src = `/stamps/stamp${stampId}_anim.gif?t=${Date.now()}`;
      gif.className = 'flying-gif';
      const clientX = e instanceof MouseEvent ? e.clientX : (e as any).touches[0].clientX;
      const clientY = e instanceof MouseEvent ? e.clientY : (e as any).touches[0].clientY;
      gif.style.left = `${clientX - 30}px`;
      gif.style.top = `${clientY - 30}px`;
      document.body.appendChild(gif);
      setTimeout(() => gif.remove(), 1200);

      const { error } = await supabase.rpc('increment_stamp', { article_slug: slug, s_id: stampId });
      if (!error) {
        const countEl = document.getElementById(`count-${stampId}`);
        if (countEl) countEl.textContent = String(Number(countEl.textContent) + 1);
      }
    });
  });

  // --- 【4】コメント送信 ---
  const commentForm = document.getElementById('comment-form') as HTMLFormElement | null;
  commentForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const parentId = commentForm.getAttribute('data-reply-to') || null;
    const nameInput = document.getElementById('comment-name') as HTMLInputElement;
    const contentInput = document.getElementById('comment-content') as HTMLTextAreaElement;

    const { error } = await supabase
      .from('comments')
      .insert([{ 
        slug, 
        name: nameInput.value || '匿名', 
        content: contentInput.value, 
        parent_id: parentId 
      }]);

    if (!error) {
      nameInput.value = '';
      contentInput.value = '';
      commentForm.removeAttribute('data-reply-to');
      loadComments();
    }
  });

  // 縦書き切り替え
  const wrapper = document.getElementById('writing-wrapper');
  document.getElementById('set-vertical')?.addEventListener('click', () => {
    wrapper?.classList.add('novel-mode');
    wrapper?.classList.remove('blog-mode');
  });
  document.getElementById('set-horizontal')?.addEventListener('click', () => {
    wrapper?.classList.remove('novel-mode');
    wrapper?.classList.add('blog-mode');
  });

  loadCounts();
  loadComments();
</script>

<style>
