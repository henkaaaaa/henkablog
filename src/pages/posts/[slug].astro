    display: grid;
    /* フロントと同じく、中央列をメインにする grid 設定 */
    grid-template-columns: 1fr minmax(320px, 820px) 1fr;
    gap: 40px;
    width: 96%;
    max-width: 1500px;
    padding: 60px 0;
  }

  .core-content {
    grid-column: 2; /* 3カラムの中央を占拠 */
    min-width: 0;   /* はみ出し防止の呪文 */
  }

  /* モバイル対応：1カラムに切り替え */
  @media (max-width: 900px) {
    .library-shell {
      grid-template-columns: 1fr;
      width: 92%;
    }
    .core-content {
      grid-column: 1;
    }
  }

  /* --- 以下、詳細ページ固有のスタイル調整 --- */
  .title-section { text-align: center; margin-bottom: 40px; }
  .post-title { font-family: "Sawarabi Mincho", serif; font-size: 2.4rem; color: #1a1a1a; line-height: 1.4; }
  
  .interaction-container { 
    width: 100%; 
    box-sizing: border-box; 
    margin-top: 80px; 
    padding: 30px; 
    background: #fafafa; 
    border: 1px solid #eee; 
    border-radius: 12px; 
  }

  /* 動的要素への global 適用などは以前の通り */
  :global(.reply-list) {
    margin-left: 20px !important;
    border-left: 2px solid #ccc !important;
    padding-left: 15px !important;
    margin-top: 10px;
  }
  
  @media (min-width: 768px) {
    :global(.reply-list) { margin-left: 45px !important; }
  }
  /* --- 1. 基本・縦書き設定 --- */
  .title-section { text-align: center; margin: 80px 0 40px; }
  .post-title { font-family: "Sawarabi Mincho", serif; font-size: 2.4rem; color: #1a1a1a; }
  .layout-switcher { display: flex; justify-content: center; gap: 20px; margin-bottom: 40px; }
  .switch-btn { padding: 8px 20px; cursor: pointer; border: 1px solid #ddd; background: #fff; font-family: serif; font-size: 0.8rem; }
  .switch-btn:hover { background: #f0f0f0; }
  :global(.novel-mode) { writing-mode: vertical-rl !important; -webkit-writing-mode: vertical-rl !important; margin: 40px auto !important; height: 70vh !important; padding: 60px 40px !important; background: #fdfaf4 !important; overflow-x: auto !important; border: 1px solid #eee; }

  /* --- 2. スタンプ & コンテナ --- */
  .interaction-container { max-width: 750px; margin: 80px auto; padding: 40px; background: #fafafa; border: 1px solid #eee; border-radius: 12px; }
  .section-label { font-size: 0.7rem; color: #aaa; text-transform: uppercase; letter-spacing: 0.2em; text-align: center; margin-bottom: 20px; }
  .stamp-buttons { display: flex; justify-content: center; gap: 30px; margin-top: 20px; }
  .stamp-trigger { background: none; border: none; cursor: pointer; display: flex; flex-direction: column; align-items: center; }
  .stamp-trigger img { width: 50px; height: 50px; filter: grayscale(0.5); transition: 0.3s; }
  .stamp-trigger:hover img { filter: grayscale(0); transform: translateY(-5px); }
  .count { font-size: 0.7rem; color: #999; margin-top: 5px; }

  /* --- 3. コメントリスト（動的要素には :global を使用） --- */
  :global(.comment-list) { display: flex; flex-direction: column; gap: 20px; margin-top: 30px; }
  :global(.comment-group) { border-radius: 12px; overflow: hidden; margin-bottom: 25px; }
  
  :global(.comment-group.row-even .comment-item:not(.nested)) { background: #ffffff !important; border: 1px solid #e0e0e0; }
  :global(.comment-group.row-odd .comment-item:not(.nested)) { background: #f5f5f5 !important; border: 1px solid #dcdcdc; }

  :global(.comment-item) {
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.03);
    margin-bottom: 5px;
  }

  /* 返信リストの「ぶら下げ」 */
  :global(.reply-list) {
    margin-left: 30px !important;
    margin-top: 10px !important;
    border-left: 2px solid #ccc !important;
    padding-left: 15px !important;
    display: flex !important;
    flex-direction: column !important;
    gap: 10px !important;
  }

  /* 返信（nested）のデザイン：ここが一番重要 */
  :global(.comment-item.nested) {
    background-color: #f0f0f0 !important; /* 薄いグレー。画像のようにしたいなら #d9c8c1 等に変更 */
    border: 1px solid #ddd !important;
    border-radius: 8px !important;
    padding: 12px !important;
    font-size: 0.8rem !important;
  }

  :global(.comment-header) {
    display: flex !important;
    justify-content: space-between !important;
    align-items: center;
    margin-bottom: 10px;
    border-bottom: 1px solid rgba(0,0,0,0.05);
    padding-bottom: 5px;
  }
  :global(.comment-author) { font-weight: 700; color: #1a1a1a; }
  :global(.comment-date) { font-size: 0.7rem; color: #999; }
  :global(.comment-body) { line-height: 1.6; color: #333; white-space: pre-wrap; }

  :global(.comment-actions) { display: flex; justify-content: flex-end; align-items: center; margin-top: 10px; gap: 10px; }
  :global(.reply-btn) { background: #1a1a1a; color: #fff; border: none; padding: 4px 12px; font-size: 0.7rem; border-radius: 4px; cursor: pointer; }

  /* --- 4. スタンプ演出 --- */
  :global(.flying-gif) { position: fixed; pointer-events: none; z-index: 9999; animation: flyUp 1.2s ease-out forwards; }
  @keyframes flyUp {
    0% { transform: translateY(0) scale(0.5); opacity: 1; }
    100% { transform: translateY(-120px) scale(1.2); opacity: 0; }
  }

  .comment-form { margin-top: 40px; padding-top: 30px; border-top: 1px solid #eee; }
  .input-name, .input-text { width: 100%; border: 1px solid #ddd; padding: 12px; margin-bottom: 10px; box-sizing: border-box; }
  .submit-btn { background: #1a1a1a; color: #fff; border: none; padding: 12px; cursor: pointer; width: 100%; }


